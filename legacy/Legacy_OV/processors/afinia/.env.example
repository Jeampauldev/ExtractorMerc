# Archivo de ejemplo para variables de entorno del procesador Afinia
# Copiar este archivo como .env y completar con los valores reales

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS RDS
# =============================================================================

# Host de la base de datos RDS
DB_HOST=ce-ia.ch1riez4g3n7.us-west-2.rds.amazonaws.com

# Nombre de la base de datos
DB_NAME=CE-IA

# Usuario de la base de datos
DB_USER=Ises_ML_Admin

# Contraseña de la base de datos
DB_PASSWORD=0747FB5D-6467-4C01-AC4B-B8A7186C632F

# Puerto de la base de datos (por defecto MySQL: 3306)
DB_PORT=3306

# =============================================================================
# CONFIGURACIÓN DE PROCESAMIENTO
# =============================================================================

# Tamaño del lote para procesamiento
BATCH_SIZE=50

# Número máximo de reintentos
MAX_RETRIES=3

# Timeout de conexión en segundos
CONNECTION_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Directorio para archivos de log
LOG_DIR=logs

# Tamaño máximo del archivo de log en MB
LOG_MAX_SIZE=10

# Número de archivos de log a mantener
LOG_BACKUP_COUNT=5

# =============================================================================
# RUTAS DE ARCHIVOS
# =============================================================================

# Directorio de entrada para archivos JSON
INPUT_DIR=c:\00_Project_Dev\10_ExtractorOV\ExtractorOV\downloads\afinia\new_version

# Directorio de salida para archivos procesados
OUTPUT_DIR=c:\00_Project_Dev\10_ExtractorOV\ExtractorOV\processors\afinia\output

# Directorio para archivos de error
ERROR_DIR=c:\00_Project_Dev\10_ExtractorOV\ExtractorOV\processors\afinia\errors

# =============================================================================
# CONFIGURACIÓN DE VALIDACIÓN
# =============================================================================

# Validar estructura JSON estricta (true/false)
STRICT_VALIDATION=true

# Permitir campos adicionales no definidos (true/false)
ALLOW_EXTRA_FIELDS=false

# Validar formato de email (true/false)
VALIDATE_EMAIL_FORMAT=true

# Validar formato de teléfono (true/false)
VALIDATE_PHONE_FORMAT=true

# =============================================================================
# CONFIGURACIÓN DE RENDIMIENTO
# =============================================================================

# Usar pool de conexiones (true/false)
USE_CONNECTION_POOL=true

# Tamaño máximo del pool de conexiones
MAX_POOL_SIZE=10

# Timeout para obtener conexión del pool (segundos)
POOL_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Habilitar métricas de rendimiento (true/false)
ENABLE_METRICS=true

# Intervalo de reporte de métricas en segundos
METRICS_INTERVAL=300

# Exportar métricas a archivo (true/false)
EXPORT_METRICS=true

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Habilitar SSL para conexión a BD (true/false)
DB_SSL=true

# Verificar certificado SSL (true/false)
DB_SSL_VERIFY=false

# Encriptar logs sensibles (true/false)
ENCRYPT_LOGS=false